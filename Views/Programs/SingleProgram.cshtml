@model ProgramModel

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="top">
      <img src="\lib\images\nscc-logo.jpg" alt="nscc-logo" width="200px" class="d-inline-block ms-3">
    </a>
    @* <div>
    <span id="lblExpire" class="text-warning" style="margin-left:10px">WARNING: You're session is about
    to expire</span>
    </div> *@
    <form method="post">
      <button type="submit" class="btn btn-warning me-3" asp-controller="Admin" asp-action="Logout">
        Logout
      </button>
    </form>
  </div>
</nav>

<div class="col text-white">
  <div class="flex ms-4">
    <span class="fs-2">PROGRAM NAME FOR SELECTED PROGRAM</span>
  </div>

  <div class="border-top pt-2 mt-2 ms-4">
    <form method="post">
      <div class="mt-2">
        <button type="submit" class="btn p-0 text-white" asp-controller="Courses" asp-action="AddCourse">
          <i class="fa fa-plus bg-warning p-2 rounded ms-1 mb-2"></i> Add Course
        </button>
      </div>
    </form>

    @if (@Model.Courses.Count > 0)
    {
      <div class="ms-4">
        @foreach (var course in Model.Courses)
        {
          <form method="post">
            <div class="flex">
              <button type="submit" class="btn p-1" asp-controller="Courses" asp-action="Delete"
                asp-route-id="@course.Id">
                <i class="fa fa-trash bg-warning p-2 rounded"></i>
              </button>
              <button type="submit" class="btn p-0" asp-controller="Courses" asp-action="Update"
                asp-route-id="@course.Id">
                <i class="fa fa-pencil bg-warning p-2 rounded"></i>
              </button>
              <span> @course.Name, code: @course.Code </span>
            </div>
          </form>
        }
      </div>
    }
    else
    {
      <div class="ms-4">
        <span>No programs found</span>
      </div>
    }
  </div>
</div>