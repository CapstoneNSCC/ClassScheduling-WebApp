@model ProgramModel;

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="\lib\images\nscc-logo.jpg" alt="nscc-logo" width="200px" class="d-inline-block ms-3">
    </a>
    @* <div>
    <span id="lblExpire" class="text-warning" style="margin-left:10px">WARNING: You're session is about
    to expire</span>
    </div> *@
    <div class="d-flex flex-row">
      <form method="post">
        <button type="submit" class="btn btn-warning me-3" asp-controller="Admin" asp-action="Index">
          Dashboard
        </button>
      </form>

      <form method="post">
        <button type="submit" class="btn btn-warning me-3" asp-controller="Admin" asp-action="Logout">
          Logout
        </button>
      </form>
    </div>
  </div>
</nav>

<div class="p-5 text-white">
  <h1>Edit Program.</h1>
  <div style="margin-bottom:10px" class="fs-5">Edit the Program data below:</div>

  <form asp-controller="Programs" asp-action="UpdateSubmit" method="post">
    <div class="mb-4">
      <label class="pb-2">Program Name:</label>
      <input type="text" asp-for="@Model.Name" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.Name" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Program Year:</label>
      <select class="yearSelect mb-4 form-select" asp-for="@Model.Year">
        <option value="1">1</option>
        <option value="2">2</option>
      </select>
    </div>

    <div class="mb-4">
      <input type="hidden" asp-for="@Model.Id" />
      <input type="submit" class="btn btn-warning" value="Update" />
      <a href="/Programs" class="btn btn-warning">Cancel</a>
    </div>
  </form>
</div>