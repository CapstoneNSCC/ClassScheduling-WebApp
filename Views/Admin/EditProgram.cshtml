<div class="p-5 text-white">
  <h1>Edit Program.</h1>
  <div style="margin-bottom:10px" class="fs-5">Edit the Program data below:</div>

  <form asp-controller="Admin" method="post">
    <div class="mb-4">
      <label class="pb-2">Program Name:</label>
      <input type="text" asp-for="@Model.Name" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.Name" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Program Year:</label>
      <select class="yearSelect mb-4 form-select">
        <option value="1">1</option>
        <option value="2">2</option>
      </select>
    </div>

    <div class="mb-4">
      <input type="submit" asp-controller="Admin" asp-action="AddSubmit" class="btn btn-warning"
        value="Add" />
      <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning"
          value="Cancel" /></a>
    </div>
  </form>
</div>