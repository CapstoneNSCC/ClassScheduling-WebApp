<div class="p-5 text-white">
  <h1>Add Program.</h1>
  <div style="margin-bottom:10px" class="fs-5">Enter the new Program data below:</div>

  <form asp-controller="Admin" method="post">
    <div class="mb-4">
      <label class="pb-2">Program Name:</label>
      <input type="text" asp-for="@Model.Name" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.Name" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Program Year: switch this to a drop down to select 1 or 2 for the program
        year</label>
      <asp:dropdownlist runat="server" id="ddlTest">
        <asp:listitem text="Red" value="1"></asp:listitem>
        <asp:listitem text="Black" value="2"></asp:listitem>
        <asp:listitem text="Blue" value="3"></asp:listitem>
        <asp:listitem text="Green" value="4"></asp:listitem>
        <asp:listitem text="Yellow" value="5"></asp:listitem>
      </asp:dropdownlist>
    </div>

    <div class="mb-4">
      <input type="submit" asp-controller="Admin" asp-action="AddProgramSubmit" class="btn btn-warning"
        value="Add" />
      <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning"
          value="Cancel" /></a>
      <label class="pb-2">Program Year:</label>
      <input type="text" asp-for="@Model.Year" class="form-control" maxlength="1" />
      <span asp-validation-for="@Model.Year" class="text-danger" />
    </div>

    <div class="mb-4">
      <input type="submit" asp-controller="Admin" asp-action="AddSubmit" class="btn btn-warning"
        value="Add" />
      <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning"
          value="Cancel" /></a>
    </div>

  </form>
</div>