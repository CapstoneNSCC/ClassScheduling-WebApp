<form asp-controller="Login" asp-action="Submit">
  <div class="container">
    <div class="row mt-2">
      <div class="col text-white fs-4">
        <h1>Login.</h1>
        Please enter your Username and Password...
      </div>
    </div>

    <div class="row">
      <div class="col mt-2 text-white">
        <div class="mb-3">
          <label for="txtUserName">Username:</label>
          <input type="text" name="myUsername" class="form-control" maxlength="20" />
        </div>
        <div class="mb-3">
          <label for="txtPassword">Password:</label>
          <input type="password" name="myPassword" class="form-control" maxlength="20" />
        </div>
        <div class="mb-3">
          <input type="submit" text="Submit" class="btn btn-warning" />
          <span class="text-warning" style="margin-left:5px;">@ViewData["feedback"]</span>
        </div>
      </div>
    </div>
  </div>
</form>