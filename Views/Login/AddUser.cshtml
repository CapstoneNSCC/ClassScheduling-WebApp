<div class="p-5 text-white">
  <h1>Add Faculty.</h1>
  <div style="margin-bottom:10px" class="fs-5">Enter the new faculty members data below:</div>

  <form asp-controller="Admin" method="post">
    <div class="mb-4">
      <label class="pb-2">First Name:</label>
      <input type="text" asp-for="@Model.FirstName" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.FirstName" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Last Name:</label>
      <input type="text" asp-for="@Model.LastName" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.LastName" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Username:</label>
      <input type="text" asp-for="@Model.UserName" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.UserName" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Password:</label>
      <input type="text" asp-for="@Model.Password" class="form-control" maxlength="60" />
      <span asp-validation-for="@Model.Password" class="text-danger" />
    </div>

    <div class="mb-4">
      <label class="pb-2">Admin Status:</label>
      <div><input asp-for="@Model.SetAsAdmin" type="radio" value="true" checked /> yes </div>
      <div><input asp-for="@Model.SetAsAdmin" type="radio" value="false" /> no </div>
      <span asp-validation-for="@Model.SetAsAdmin" class="text-danger" />
    </div>

    <div class="mb-4">
      <input type="submit" asp-controller="Course" asp-action="AddCourse" class="btn btn-warning"
        value="Add" />
      <a asp-controller="Course" asp-action="AddCourse"><input type="button" class="btn btn-warning"
          value="Cancel" /></a>
    </div>

  </form>
</div>