<div class="p-5 text-white">
  <h1>Edit Technology.</h1>
  <div style="margin-bottom:10px" class="fs-5">Edit the Technology below:</div>

  <form asp-controller="Admin" method="post">
    <div class="mb-4">
      <label class="pb-2">Technology Name:</label>
      <input type="text" asp-for="@Model.Description" class="form-control" maxlength="20" />
      <span asp-validation-for="@Model.Description" class="text-danger" />
    </div>

    <div class="mb-4">
      <input type="hidden" asp-for="@Model.Id" />
      <input type="submit" asp-controller="Technology" asp-action="UpdateSubmit" class="btn btn-warning"
        value="Edit" />
      <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning"
          value="Cancel" /></a>
    </div>
  </form>
</div>