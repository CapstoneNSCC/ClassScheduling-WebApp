<div class="p-5 text-white">
  <h1>Delete Classroom.</h1>

  <form asp-asp-controller="Classroom" asp-action="DeleteSubmit" method="post">
    <div style="margin-bottom:10px" class="fs-5">Are you sure you want to delete?</div>
    <span>Room: @Model.RoomNumber, Building @Model.BuildingAcronym</span>

    <div class="mt-4">
      <input type="hidden" asp-for="@Model.Id" />
      <input type="submit" asp-controller="Classroom" asp-action="DeleteSubmit" class="btn btn-warning"
        value="Delete" />
      <a href="/Classroom/Index" class="btn btn-warning">Cancel</a>
    </div>
  </form>
</div>