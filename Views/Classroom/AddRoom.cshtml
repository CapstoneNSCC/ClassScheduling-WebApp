<div class="p-5 text-white">
    <h1>Add Classroom.</h1>
    <div style="margin-bottom:10px" class="fs-5">Enter the new Classroom below:</div>

    <form asp-controler="Classroom" method="post">
        <div class="mb-4">
            <label class="pb-2">Classroom Number:</label>
            <input type="text" asp-for="@Model.RoomNumber" class="form-control" maxlength="3" />
            <span asp-validation-for="@Model.RoomNumber" class="text-danger" />
        </div>
        <div class="mb-4">
            <label class="pb-2">Building Acronym:</label>
            <input type="text" asp-for="@Model.BuildingAcronym" class="form-control" maxlength="3" />
            <span asp-validation-for="@Model.BuildingAcronym" class="text-danger" />
        </div>
        <div class="mb-4">
            <input type="submit" asp-controller="Classroom" asp-action="AddSubmit" class="btn btn-warning"
                value="Add" />
            <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning"
                    value="Cancel" /></a>
        </div>

    </form>
</div>