@model CourseModel;

@{
  ViewData["Title"] = "Edit Course";
}

<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="\lib\images\nscc-logo.jpg" alt="nscc-logo" width="200px" class="d-inline-block ms-3">
    </a>
    <form method="post" asp-controller="Admin" asp-action="Logout">
      <button type="submit" class="btn btn-warning me-3">Logout</button>
    </form>
  </div>
</nav>

<div class="container mt-5 text-white">
  <h1 class="mb-4">Edit Course</h1>
  <div style="margin-bottom:10px" class="fs-5">Edit the Course data below:</div>


  <form asp-controller="Course" asp-action="EditSubmit" method="post">


    <div class="mb-4">
      <label asp-for="IdProgram" class="control-label mb-2">Program</label>
      <select asp-for="IdProgram" class="form-control" asp-items="ViewBag.IdProgram">
      </select>
    </div>

    <div class="mb-4">
      <label asp-for="Code" class="control-label mb-2">Course Code</label>
      <input asp-for="Code" class="form-control" />
      <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="mb-4">
      <label asp-for="Name" class="control-label mb-2">Course Name</label>
      <input asp-for="Name" class="form-control" />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-4">
      <label asp-for="IdProfessor" class="control-label mb-2">Professor</label>
      <div class="d-flex flex-row pr-3">
        <select asp-for=" IdProfessor" class="form-control" asp-items="ViewBag.IdProfessor">
          <option value="">Please select a professor</option>
        </select>
      </div>
    </div>

    <div class=" mb-4">
      <label asp-for="Hours" class="control-label mb-2">Hours</label>
      <div><input asp-for="Hours" type="radio" value="60" checked /> 60 hours </div>
      <div><input asp-for="Hours" type="radio" value="90" /> 90 hours </div>
      @* <span asp-validation-for="Hours" class="text-danger"></span> *@
    </div>

    <div class="mb-4">
      <label class="control-label mb-2">Technology</label>
      @foreach (var tech in ViewBag.Technologies as List<TechnologyModel>)
      {
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="SelectedTechnologyIds" value="@tech.Id"
          @(Model.SelectedTechnologyIds.Contains(tech.Id) ? "checked" : "")>
          <label class="form-check-label">@tech.Description</label>
        </div>
      }
    </div>


    <div class="mb-4">
      <input type="hidden" asp-for="@Model.Id" />
      <input type="submit" asp-controller="Course" asp-action="EditSubmit" class="btn btn-warning"
        asp-route-id="@Model.Id" value="Update" />
      <a href="/Program/ProgramDetails/@Model.IdProgram" class="btn btn-warning">Cancel</a>
    </div>
  </form>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}